#intro
    position relative
    width fit-content
    padding 3em
    padding-left 1em
    padding-top 1em
    left 50%
    top 50%
    display none
    text-shadow 0px 0px 10px black
    +mq('bp-4')
        padding-left 3em


.letter
    opacity 0
    display inline-block
    
h1
    font-size 2.3em
    font-weight 300
    margin-bottom 0
    +mq('bp-4')
        font-size 3em

h2
    font-size 1.2em
    font-weight 200
    margin-top 0
    +mq('bp-4')
        font-size 1.5em